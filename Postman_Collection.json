{
  "info": {
    "name": "OTP Authentication System",
    "description": "Complete API collection for testing the OTP authentication system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "phone_number",
      "value": "+256701234567",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Request OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone_number\": \"{{phone_number}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/request-otp",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "request-otp"]
            },
            "description": "Request an OTP code to be sent to the phone number. Rate limited to 3 requests per minute."
          },
          "response": []
        },
        {
          "name": "Verify OTP",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"token\", jsonData.token);",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone_number\": \"{{phone_number}}\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/verify-otp",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "verify-otp"]
            },
            "description": "Verify the OTP code and receive an authentication token. The token is automatically saved for use in protected endpoints."
          },
          "response": []
        },
        {
          "name": "Get Authenticated User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/me",
              "host": ["{{base_url}}"],
              "path": ["api", "me"]
            },
            "description": "Get the currently authenticated user's information. Requires a valid Bearer token."
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "logout"]
            },
            "description": "Logout and revoke the current authentication token."
          },
          "response": []
        }
      ],
      "description": "OTP authentication flow endpoints"
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Create Single User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone_number\": \"{{phone_number}}\",\n  \"name\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            },
            "description": "Create a single user with phone number and optional name."
          },
          "response": []
        },
        {
          "name": "Bulk Import Users",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/users.csv",
                  "description": "CSV or Excel file with columns: phone_number, name"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/users/bulk",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "bulk"]
            },
            "description": "Bulk import users from CSV or Excel file. Expected columns: phone_number, name"
          },
          "response": []
        }
      ],
      "description": "User registration endpoints (admin)"
    }
  ]
}
